@prefix dprod: <https://ekgf.github.io/dprod/> .
@prefix hydra: <http://www.w3.org/ns/hydra/core#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dct: <http://purl.org/dc/terms/> .

# A sample data product with input and output datasets and lifecycle status
:exampleDataProduct a dprod:DataProduct ;
    dct:title "Example Data Product" ;
    hydra:Link [
        hydra:property dprod:inputDataset ;
        hydra:description "Input dataset for this data product" ;
        hydra:range dcat:Dataset
    ] ;
    hydra:Link [
        hydra:property dprod:outputDataset ;
        hydra:description "Output dataset generated by this data product" ;
        hydra:range dcat:Dataset
    ] ;
    hydra:supportedOperation [
        a hydra:Operation ;
        hydra:method "GET" ;
        hydra:returns dcat:Dataset ;
        hydra:title "Retrieve Data Product" ;
        hydra:description "Retrieve the associated dataset of the data product."
    ] .

# A lifecycle status with an operation to update the status
:exampleDataProductLifecycle a dprod:DataProductLifecycleStatus ;
    dct:title "Active Lifecycle Status" ;
    hydra:supportedOperation [
        a hydra:Operation ;
        hydra:method "PUT" ;
        hydra:expects dprod:DataProductLifecycleStatus ;
        hydra:returns rdf:nil ;
        hydra:title "Update Lifecycle Status" ;
        hydra:description "Change the lifecycle status of the data product."
    ] .

# A collection of data products
:dataProductCatalog a hydra:Collection ;
    hydra:member :exampleDataProduct ;
    hydra:description "Collection of available data products" .

# API documentation for the DPROD API
:dprodApi a hydra:ApiDocumentation ;
    hydra:title "DPROD API Documentation" ;
    hydra:description "API for interacting with DPROD data products" ;
    hydra:entrypoint :dataProductCatalog ;
    hydra:supportedClass dprod:DataProduct ;
    hydra:supportedOperation [
        a hydra:Operation ;
        hydra:method "GET" ;
        hydra:returns dcat:Catalog ;
        hydra:title "Retrieve the Data Product Catalog" ;
        hydra:description "Retrieve the catalog of data products."
    ] .
